<config>
    <modules>
        <LCB_Feeds>
            <version>1.3.0</version>
        </LCB_Feeds>
    </modules>
    <frontend>
        <routers>
            <feeds>
                <use>standard</use>
                <args>
                    <module>LCB_Feeds</module>
                    <frontName>datafeeds</frontName>
                </args>
            </feeds>
        </routers>
    </frontend>
    <global>
        <helpers>
            <lcb_feeds>
                <class>LCB_Feeds_Helper</class>
            </lcb_feeds>
        </helpers>
        <blocks>
            <lcb_feeds>
                <class>LCB_Feeds_Block</class>
            </lcb_feeds>
        </blocks>
        <models>
            <lcb_feeds>
                <class>LCB_Feeds_Model</class>
                <resourceModel>feeds_mysql4</resourceModel>
            </lcb_feeds>
        </models>
        <resources>
            <lcb_feeds_setup>
                <setup>
                    <module>LCB_Feeds</module>
                    <class>Mage_Catalog_Model_Resource_Eav_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </lcb_feeds_setup>
            <lcb_feeds_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </lcb_feeds_write>
            <lcb_feeds_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </lcb_feeds_read>
        </resources>
    </global>
    <default>
        <lcb_feeds>
            <general>
                <hide_no_description>0</hide_no_description>
            </general>
        </lcb_feeds>
    </default>
</config>